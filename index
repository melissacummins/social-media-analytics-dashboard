    <!-- Firebase SDK & Application Logic -->
    <script type="module">
        // Import Firebase modules
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.14.1/firebase-app.js';
        import { getAuth, GoogleAuthProvider, signInWithPopup, signOut as firebaseSignOut, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/10.14.1/firebase-auth.js';
        import { getFirestore, doc, setDoc, getDoc, collection, getDocs, deleteDoc } from 'https://www.gstatic.com/firebasejs/10.14.1/firebase-firestore.js';

        // Global variables
        let app, auth, db;
        let currentUser = null;
        let postCounter = 0;
        let initializationError = null;
        let userApiKey = null;
        let currentEntryMethod = 'dashboard';
        let editingPostId = null;
        let csvInputMethod = 'paste';
        let currentDataRange = null;

        // Store original data for safe edit/cancel
        let originalPostData = {};

        // Account management variables
        let currentAccountId = 'default';
        let userAccounts = {
            'default': {
                id: 'default',
                name: 'Default Account',
                description: '',
                color: '#667eea',
                createdAt: new Date().toISOString()
            }
        };
        let editingAccountId = null;

        try {
            const firebaseConfig = {
                apiKey: "AIzaSyA0CipMJUlrp0tFKSE4T-c5a-4yBJpE8xs",
                authDomain: "social-media-dashboard-mc.firebaseapp.com",
                projectId: "social-media-dashboard-mc",
                storageBucket: "social-media-dashboard-mc.firebasestorage.app",
                messagingSenderId: "504137402125",
                appId: "1:504137402125:web:1e00590b5f278ff14a5244",
                measurementId: "G-WFQQNGW21G"
            };

            app = initializeApp(firebaseConfig);
            auth = getAuth(app);
            db = getFirestore(app);

            console.log('Firebase initialized successfully');

        } catch (error) {
            console.error('Firebase initialization error:', error);
            initializationError = error;
            showError('Firebase initialization failed: ' + error.message);
        }

        // --- Functions defined in the global scope (or attached to window) ---
        // (These functions will be accessed by event listeners attached via JS)

        // UI Helper Functions
        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');
            errorText.textContent = message;
            errorDiv.classList.remove('hidden');
        }

        function hideError() {
            document.getElementById('errorMessage').classList.add('hidden');
        }

        function showAuthSection() {
            document.getElementById('authSection').classList.remove('hidden');
            document.getElementById('userSection').classList.add('hidden');
            document.getElementById('appContent').classList.add('hidden');

            // Clear inputs and content when signed out
            document.getElementById('startDatePicker').value = '';
            document.getElementById('endDatePicker').value = '';
            document.getElementById('time-creation').value = '';
            document.getElementById('time-management').value = '';
            document.getElementById('time-engagement').value = '';
            document.getElementById('time-analytics').value = '';
            document.getElementById('timeAnalysis').innerHTML = 'Enter time data to see analysis';
            document.getElementById('summaryGrid').innerHTML = '';

            clearAllPlatformPosts(); // Assuming this is defined below
        }

        function showUserSection() {
            document.getElementById('authSection').classList.add('hidden');
            document.getElementById('userSection').classList.remove('hidden');
            document.getElementById('appContent').classList.remove('hidden');

            document.getElementById('userName').textContent = currentUser.displayName || 'User';
            document.getElementById('userEmail').textContent = currentUser.email;
            document.getElementById('userAvatar').src = currentUser.photoURL || '';

            hideError();
            document.getElementById('debugInfo').classList.add('hidden');

            checkApiKeyStatus();
            loadUserAccounts();
        }

        async function signInWithGoogle() {
            console.log('Sign in button clicked');

            if (initializationError) {
                showError('Firebase is not properly initialized. Please refresh the page.');
                return;
            }

            const signInBtn = document.getElementById('signInBtn');
            signInBtn.disabled = true;
            signInBtn.textContent = 'Signing in...';

            hideError();

            try {
                const provider = new GoogleAuthProvider();
                provider.addScope('email');
                provider.addScope('profile');
                provider.setCustomParameters({
                    prompt: 'select_account'
                });

                const result = await signInWithPopup(auth, provider);
                console.log('Sign in successful:', result.user.email);

            } catch (error) {
                console.error('Sign in error:', error);

                let errorMessage = 'Unknown error occurred';

                switch (error.code) {
                    case 'auth/popup-blocked':
                        errorMessage = 'Popup was blocked by your browser. Please allow popups for this site and try again.';
                        break;
                    case 'auth/popup-closed-by-user':
                        errorMessage = 'Sign-in was cancelled. Please try again.';
                        break;
                    case 'auth/unauthorized-domain':
                        errorMessage = 'This domain is not authorized for OAuth operations. Please contact support.';
                        break;
                    case 'auth/operation-not-allowed':
                        errorMessage = 'Google Sign-In is not enabled. Please contact support.';
                        break;
                    default:
                        errorMessage = 'Authentication failed: ' + error.message;
                        break;
                }

                showError(errorMessage);

            } finally {
                signInBtn.disabled = false;
                signInBtn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>Sign in with Google';
            }
        }

        async function signOut() {
            if (initializationError) {
                showError('Firebase is not properly initialized.');
                return;
            }

            try {
                userApiKey = null;
                await firebaseSignOut(auth);
                console.log('Sign out successful');
                hideError();
            } catch (error) {
                console.error('Sign out error:', error);
                showError('Sign out failed: ' + error.message);
            }
        }

        // Data functions
        async function loadUserData() {
            if (!currentUser || initializationError) return;

            const loadingIndicator = document.getElementById('loadingIndicator');
            loadingIndicator.style.display = 'block';

            try {
                const startDate = document.getElementById('startDatePicker').value;
                const endDate = document.getElementById('endDatePicker').value;

                if (!startDate) {
                    loadingIndicator.style.display = 'none';
                    return;
                }

                let docRef = doc(db, 'users', currentUser.uid, 'accounts', currentAccountId, 'dateRanges', startDate);
                let docSnap = await getDoc(docRef);

                if (docSnap.exists()) {
                    const rangeData = docSnap.data();
                    console.log('Loading data for account:', currentAccountId, 'range:', startDate, rangeData);
                    currentDataRange = rangeData;
                    populateFormWithData(rangeData);
                    showDateRangeInfo(rangeData.startDate, rangeData.endDate);
                } else {
                    const foundData = await findDataInDateRange(startDate, endDate);

                    if (foundData) {
                        console.log('Found overlapping data for account:', currentAccountId, foundData);
                        currentDataRange = foundData;
                        populateFormWithData(foundData);
                        showDateRangeInfo(foundData.startDate, foundData.endDate);
                    } else {
                        console.log('No data found for account:', currentAccountId, 'date range:', startDate);
                        currentDataRange = null;
                        hideDateRangeInfo();

                        if (currentAccountId === 'default') {
                            const migrated = await migrateOldDataIfExists(startDate);
                            if (!migrated) {
                                clearAllPlatformPosts();
                            }
                        } else {
                            clearAllPlatformPosts();
                        }
                    }
                }

                loadingIndicator.style.display = 'none';
            } catch (error) {
                console.error('Error loading data:', error);
                loadingIndicator.style.display = 'none';
                showError('Failed to load data: ' + error.message);
            }
        }

        async function findDataInDateRange(selectedStartDate, selectedEndDate) {
            try {
                const dateRangesRef = collection(db, 'users', currentUser.uid, 'accounts', currentAccountId, 'dateRanges');
                const snapshot = await getDocs(dateRangesRef);

                const selectedStart = new Date(selectedStartDate);
                const selectedEnd = new Date(selectedEndDate || selectedStartDate);

                for (const docSnap of snapshot.docs) {
                    const data = docSnap.data();
                    const dataStartDate = new Date(data.startDate);
                    const dataEndDate = new Date(data.endDate || data.startDate);

                    const hasOverlap = (selectedStart <= dataEndDate && selectedEnd >= dataStartDate);

                    if (hasOverlap) {
                        console.log('Found overlapping range:', data.startDate, 'to', data.endDate, 'for selected:', selectedStartDate, 'to', selectedEndDate);
                        return data;
                    }
                }

                return null;
            } catch (error) {
                console.error('Error searching date ranges:', error);
                return null;
            }
        }

        function showDateRangeInfo(dataStartDate, dataEndDate) {
            const infoElement = document.getElementById('dateRangeInfo');
            const textElement = document.getElementById('dataRangeText');

            const startFormatted = new Date(dataStartDate).toLocaleDateString();
            const endFormatted = new Date(dataEndDate).toLocaleDateString();

            textElement.textContent = 'Showing data from ' + startFormatted + ' to ' + endFormatted;
            infoElement.classList.remove('hidden');
        }

        function hideDateRangeInfo() {
            const infoElement = document.getElementById('dateRangeInfo');
            infoElement.classList.add('hidden');
        }

        async function migrateOldDataIfExists(startDate) {
            try {
                const oldDocRef = doc(db, 'users', currentUser.uid, 'dateRanges', startDate);
                const oldDocSnap = await getDoc(oldDocRef);

                if (oldDocSnap.exists()) {
                    console.log('Found old data, migrating to default account...');
                    const oldData = oldDocSnap.data();

                    const newDocRef = doc(db, 'users', currentUser.uid, 'accounts', 'default', 'dateRanges', startDate);
                    await setDoc(newDocRef, oldData);

                    await deleteDoc(oldDocRef);

                    console.log('Migration completed for date:', startDate);
                    currentDataRange = oldData;
                    populateFormWithData(oldData);
                    showDateRangeInfo(oldData.startDate, oldData.endDate);

                    showMigrationNotice();

                    return true;
                }
            } catch (error) {
                console.error('Migration error:', error);
            }

            return false;
        }

        function showMigrationNotice() {
            const noticeElement = document.getElementById('migrationNotice');
            noticeElement.classList.remove('hidden');

            setTimeout(() => {
                noticeElement.classList.add('hidden');
            }, 10000);
        }

        function clearAllPlatformPosts() {
            const platforms = ['instagram', 'facebook', 'threads', 'tiktok', 'pinterest'];
            platforms.forEach(platform => {
                const container = document.getElementById(platform + '-posts');
                if (container) {
                    container.innerHTML = '';
                    updatePlatformSummary(platform);
                }
            });
            postCounter = 0;
            updateOverallSummary(); // Update overall summary when posts are cleared
        }

        async function saveData() {
            if (!currentUser || initializationError) return;

            try {
                const rangeData = collectCurrentRangeData();

                const saveStartDate = currentDataRange ? currentDataRange.startDate : document.getElementById('startDatePicker').value;

                if (!saveStartDate) return;

                console.log('Saving data for account:', currentAccountId, 'range:', saveStartDate, rangeData);

                const docRef = doc(db, 'users', currentUser.uid, 'accounts', currentAccountId, 'dateRanges', saveStartDate);
                await setDoc(docRef, rangeData, { merge: true });
                console.log('Data saved successfully');
            } catch (error) {
                console.error('Error saving data:', error);
                showError('Failed to save data: ' + error.message);
            }
        }

        function collectCurrentRangeData() {
            const startDate = currentDataRange ? currentDataRange.startDate : document.getElementById('startDatePicker').value;
            const endDate = currentDataRange ? currentDataRange.endDate : document.getElementById('endDatePicker').value;

            const rangeData = {
                startDate: startDate,
                endDate: endDate,
                platforms: {},
                timeInvestment: {
                    creation: parseFloat(document.getElementById('time-creation') && document.getElementById('time-creation').value) || 0,
                    management: parseFloat(document.getElementById('time-management') && document.getElementById('time-management').value) || 0,
                    engagement: parseFloat(document.getElementById('time-engagement') && document.getElementById('time-engagement').value) || 0,
                    analytics: parseFloat(document.getElementById('time-analytics') && document.getElementById('time-analytics').value) || 0
                },
                lastUpdated: new Date().toISOString(),
                postCounter: postCounter // Store the highest used post ID to avoid conflicts
            };

            const platforms = ['instagram', 'facebook', 'threads', 'tiktok', 'pinterest'];
            platforms.forEach(platform => {
                rangeData.platforms[platform] = {
                    posts: collectPostsFromPlatform(platform)
                };
            });

            return rangeData;
        }

        function collectPostsFromPlatform(platform) {
            const container = document.getElementById(platform + '-posts');
            if (!container) return [];

            // Select only direct children that are .post-entry
            const posts = container.querySelectorAll('.post-entry');
            const postData = [];

            posts.forEach(post => {
                const postId = post.dataset.postId;
                postData.push({
                    id: postId,
                    platform: platform,
                    description: post.querySelector('.post-description') && post.querySelector('.post-description').value || '',
                    type: post.querySelector('.post-type') && post.querySelector('.post-type').value || '',
                    views: parseInt(post.querySelector('.post-views') && post.querySelector('.post-views').value) || 0,
                    likes: parseInt(post.querySelector('.post-likes') && post.querySelector('.post-likes').value) || 0,
                    comments: parseInt(post.querySelector('.post-comments') && post.querySelector('.post-comments').value) || 0,
                    saves: parseInt(post.querySelector('.post-saves') && post.querySelector('.post-saves').value) || 0,
                    shares: parseInt(post.querySelector('.post-shares') && post.querySelector('.post-shares').value) || 0,
                    newFollowers: parseInt(post.querySelector('.post-new-followers') && post.querySelector('.post-new-followers').value) || 0,
                    notes: post.querySelector('.post-notes') && post.querySelector('.post-notes').value || '',
                    createdAt: post.dataset.createdAt || new Date().toISOString() // Preserve original creation date if it exists
                });
            });

            return postData;
        }

        function populateFormWithData(rangeData) {
            console.log('Populating form with data:', rangeData);

            clearAllPlatformPosts(); // Clear existing temporary posts first

            if (rangeData.postCounter) {
                postCounter = rangeData.postCounter;
            }

            // Ensure date pickers are updated correctly
            document.getElementById('startDatePicker').value = rangeData.startDate || '';
            document.getElementById('endDatePicker').value = rangeData.endDate || '';

            const platforms = ['instagram', 'facebook', 'threads', 'tiktok', 'pinterest'];

            platforms.forEach(platform => {
                const container = document.getElementById(platform + '-posts');
                if (container && rangeData.platforms && rangeData.platforms[platform] && rangeData.platforms[platform].posts) {
                    // Sort posts by their `createdAt` property or a numeric ID if available
                    const sortedPosts = [...rangeData.platforms[platform].posts].sort((a, b) => {
                        const dateA = new Date(a.createdAt || 0); // Use a default date if not present
                        const dateB = new Date(b.createdAt || 0);
                        return dateA - dateB;
                    });
                    
                    if (sortedPosts.length > 0) {
                        const headerDiv = document.createElement('div');
                        headerDiv.className = 'post-header';
                        headerDiv.innerHTML = '<div>Description</div><div>Type</div><div>Views</div><div>Likes</div><div>Comments</div><div>Saves</div><div>Shares</div><div>New Followers</div><div>Engagement</div><div>Notes</div><div>Actions</div>';
                        container.appendChild(headerDiv);
                    }

                    sortedPosts.forEach(postData => {
                        const postId = postData.id || ++postCounter; // Ensure unique ID
                        if (postId > postCounter) { // Keep track of the highest post ID
                            postCounter = postId;
                        }

                        const postDiv = document.createElement('div');
                        postDiv.className = 'post-entry';
                        postDiv.dataset.postId = postId;
                        postDiv.dataset.platform = platform;
                        postDiv.dataset.createdAt = postData.createdAt || new Date().toISOString(); // Store creation date
                        postDiv.innerHTML = createPostHTML(postId, platform, postData, false);

                        container.appendChild(postDiv);

                        // Use setTimeout to ensure elements are rendered before calculations
                        setTimeout(() => {
                            const viewsEl = postDiv.querySelector('.post-views');
                            if (viewsEl) calculateEngagement(viewsEl);
                            const followersEl = postDiv.querySelector('.post-new-followers');
                            if (followersEl) updateFollowersDisplay(followersEl);
                        }, 0);
                    });

                    // Append Add button and Summary *after* all posts for this platform
                    const addButton = document.createElement('div');
                    addButton.className = 'add-post-button';
                    addButton.innerHTML = '<button data-platform="' + platform + '" class="add-post-btn" style="background: #38a169; margin: 20px 0;">+ Add Another Post</button>';
                    container.appendChild(addButton);

                    const summary = document.createElement('div');
                    summary.className = 'platform-summary-section';
                    summary.innerHTML = '<div style="margin-top: 20px; padding: 15px; background: #f0f8ff; border-radius: 8px;"><h4>' + getPlatformIcon(platform) + ' Summary</h4><div id="' + platform + '-summary">Add posts to see summary</div></div>';
                    container.appendChild(summary);

                    updatePlatformSummary(platform); // Update summary for this platform
                }
            });

            if (rangeData.timeInvestment) {
                const timeData = rangeData.timeInvestment;
                if (document.getElementById('time-creation')) {
                    document.getElementById('time-creation').value = timeData.creation || 0;
                }
                if (document.getElementById('time-management')) {
                    document.getElementById('time-management').value = timeData.management || 0;
                }
                if (document.getElementById('time-engagement')) {
                    document.getElementById('time-engagement').value = timeData.engagement || 0;
                }
                if (document.getElementById('time-analytics')) {
                    document.getElementById('time-analytics').value = timeData.analytics || 0;
                }
                updateTimeAnalysis();
            }
            updateOverallSummary(); // Ensure overall summary is updated after all platforms
            setupPlatformContentListeners(); // Re-attach event listeners for newly created elements
        }

        // Date range functions
        function updateDateRange() {
            const startDate = document.getElementById('startDatePicker').value;
            const endDate = document.getElementById('endDatePicker').value;

            if (!startDate) return;

            if (!endDate) {
                const start = new Date(startDate);
                const end = new Date(start);
                end.setDate(start.getDate() + 6); // Default to a week range
                document.getElementById('endDatePicker').value = end.toISOString().split('T')[0];
            } else if (new Date(startDate) > new Date(endDate)) { // ensure start date <= end date
                document.getElementById('endDatePicker').value = startDate;
            }


            if (currentUser && !initializationError) {
                loadUserData();
            }
        }

        function setThisWeek() {
            const today = new Date();
            const monday = new Date(today);
            monday.setDate(today.getDate() - today.getDay() + (today.getDay() === 0 ? -6 : 1)); // Handle Sunday as 0

            const sunday = new Date(monday);
            sunday.setDate(monday.getDate() + 6);

            document.getElementById('startDatePicker').value = monday.toISOString().split('T')[0];
            document.getElementById('endDatePicker').value = sunday.toISOString().split('T')[0];

            updateDateRange();
        }

        function setLastWeek() {
            const today = new Date();
            const lastMonday = new Date(today);
            lastMonday.setDate(today.getDate() - today.getDay() + (today.getDay() === 0 ? -6 : 1) - 7); // Last Monday

            const lastSunday = new Date(lastMonday);
            lastSunday.setDate(lastMonday.getDate() + 6);

            document.getElementById('startDatePicker').value = lastMonday.toISOString().split('T')[0];
            document.getElementById('endDatePicker').value = lastSunday.toISOString().split('T')[0];

            updateDateRange();
        }

        function switchEntryMethod(method) {
            currentEntryMethod = method;

            document.querySelectorAll('.entry-method').forEach(el => el.classList.remove('active'));
            document.getElementById(method + 'Method').classList.add('active');

            document.getElementById('dashboardSection').classList.toggle('hidden', method !== 'dashboard');
            document.getElementById('bulkSection').classList.toggle('hidden', method !== 'bulk');
            document.getElementById('aiSection').classList.toggle('hidden', method !== 'ai');
        }

        function switchCSVMethod(method) {
            csvInputMethod = method;

            document.querySelectorAll('.csv-method').forEach(el => el.classList.remove('active'));
            document.getElementById(method + 'Method').classList.add('active');

            document.getElementById('pasteCSVSection').classList.toggle('hidden', method !== 'paste');
            document.getElementById('uploadCSVSection').classList.toggle('hidden', method !== 'upload');
        }

        function initializePlatforms() {
            const platforms = [
                { id: 'instagram', name: 'Instagram', icon: 'Instagram' },
                { id: 'facebook', name: 'Facebook', icon: 'Facebook' },
                { id: 'threads', name: 'Threads', icon: 'Threads' },
                { id: 'tiktok', name: 'TikTok', icon: 'TikTok' },
                { id: 'pinterest', name: 'Pinterest', icon: 'Pinterest' }
            ];

            const container = document.getElementById('platformSections');
            container.innerHTML = '';

            platforms.forEach(platform => {
                const platformDiv = document.createElement('div');
                platformDiv.className = 'platform-section';
                // Note: Removed inline onclick for togglePlatform here. Will attach via JS.
                platformDiv.innerHTML = `
                    <div class="platform-header" data-platform-id="${platform.id}">
                        <span>${platform.name}</span><span class="expand-icon">▼</span>
                    </div>
                    <div id="${platform.id}-content" class="platform-content">
                        <div style="margin-bottom: 20px;">
                            <button data-platform="${platform.id}" class="add-post-platform-btn" style="background: #38a169;">+ Add Post</button>
                        </div>
                        <div id="${platform.id}-posts"></div>
                    </div>`;
                container.appendChild(platformDiv);
            });
            setupPlatformContentListeners(); // Attach listeners after creating platforms
        }

        function togglePlatform(platformId) {
            const content = document.getElementById(platformId + '-content');
            const header = document.querySelector(`.platform-header[data-platform-id="${platformId}"]`);

            if (content && header) {
                content.classList.toggle('hidden');
                header.classList.toggle('collapsed');
            }
        }

        function updateFollowersDisplay(element) {
            if (!element) return;
            const value = parseInt(element.value) || 0;
            element.classList.remove('positive', 'zero', 'negative');

            if (value > 0) {
                element.classList.add('positive');
            } else if (value === 0) {
                element.classList.add('zero');
            } else {
                element.classList.add('negative');
            }
        }

        function addPost(platform) {
            // Check if there's an active editing post; if so, prevent adding a new one or warn
            if (editingPostId !== null) {
                alert('Please save or cancel the currently editing post before adding a new one.');
                return;
            }

            postCounter++; // Increment before using for new post
            const newPostId = postCounter; // Assign fresh ID
            const container = document.getElementById(platform + '-posts');

            // Find existing header or create a new one if it's the first post for this platform
            let headerDiv = container.querySelector('.post-header');
            if (!headerDiv) {
                headerDiv = document.createElement('div');
                headerDiv.className = 'post-header';
                headerDiv.innerHTML = '<div>Description</div><div>Type</div><div>Views</div><div>Likes</div><div>Comments</div><div>Saves</div><div>Shares</div><div>New Followers</div><div>Engagement</div><div>Notes</div><div>Actions</div>';
                container.prepend(headerDiv); // Prepend so it's at the top of the posts list
            }


            const postDiv = document.createElement('div');
            postDiv.className = 'post-entry editing';
            postDiv.dataset.postId = newPostId;
            postDiv.dataset.platform = platform;
            postDiv.dataset.createdAt = new Date().toISOString(); // Store creation date

            const defaultData = {
                description: '',
                type: platform === 'tiktok' ? 'Video' : 'Post',
                views: '',
                likes: '',
                comments: '',
                saves: '',
                shares: '',
                newFollowers: '',
                notes: ''
            };

            // Set the new post as the currently editing one
            editingPostId = newPostId;
            originalPostData[newPostId] = { ...defaultData, id: newPostId, platform: platform }; // Store default or empty state

            postDiv.innerHTML = createPostHTML(newPostId, platform, defaultData, true);

            // Find and ensure the add button and summary are at the bottom
            let addButton = container.querySelector('.add-post-button');
            let summary = container.querySelector('.platform-summary-section');

            if (!addButton) {
                addButton = document.createElement('div');
                addButton.className = 'add-post-button';
                addButton.innerHTML = `<button data-platform="${platform}" class="add-post-btn" style="background: #38a169; margin: 20px 0;">+ Add Another Post</button>`;
            }
            if (!summary) {
                summary = document.createElement('div');
                summary.className = 'platform-summary-section';
                summary.innerHTML = `<div style="margin-top: 20px; padding: 15px; background: #f0f8ff; border-radius: 8px;"><h4>${getPlatformIcon(platform)} Summary</h4><div id="${platform}-summary">Add posts to see summary</div></div>`;
            }

            // Remove existing instances before re-appending to ensure order
            container.querySelectorAll('.add-post-button, .platform-summary-section').forEach(el => el.remove());

            container.appendChild(postDiv);
            container.appendChild(addButton);
            container.appendChild(summary);

            updatePlatformSummary(platform);
            setupPostEntryListeners(postDiv); // Attach listeners to the new post elements
        }

        function getPlatformIcon(platform) {
            const icons = {
                'instagram': 'Instagram',
                'facebook': 'Facebook',
                'threads': 'Threads',
                'tiktok': 'TikTok',
                'pinterest': 'Pinterest'
            };
            return icons[platform] || platform;
        }

        function createPostHTML(postId, platform, data, isEditing) {
            const saveButtonHTML = isEditing ?
                `<button class="save-btn" data-post-id="${postId}">Save</button><button class="cancel-btn" data-post-id="${postId}">Cancel</button>` :
                `<button class="edit-btn" data-post-id="${postId}">Edit</button><button class="remove-btn" data-post-id="${postId}">Remove</button>`;

            const defaultType = data.type || (platform === 'tiktok' ? 'Video' : 'Post');

            const newFollowersValue = data.newFollowers || '';
            let followersClass = 'new-followers';
            if (newFollowersValue > 0) followersClass += ' positive';
            else if (newFollowersValue == 0) followersClass += ' zero';
            else if (newFollowersValue < 0) followersClass += ' negative';

            // Use data attributes for events rather than inline handlers
            return `
                <div class="post-grid">
                    <input type="text" placeholder="Post description" class="post-description" value="${(data.description || '').replace(/"/g, '&quot;')}" ${!isEditing ? 'readonly' : ''}>
                    <select class="post-type" ${!isEditing ? 'disabled' : ''}>
                        <option value="Post" ${defaultType === 'Post' ? 'selected' : ''}>Post</option>
                        <option value="Reel" ${defaultType === 'Reel' ? 'selected' : ''}>Reel</option>
                        <option value="Story" ${defaultType === 'Story' ? 'selected' : ''}>Story</option>
                        <option value="Carousel" ${defaultType === 'Carousel' ? 'selected' : ''}>Carousel</option>
                        <option value="Video" ${defaultType === 'Video' ? 'selected' : ''}>Video</option>
                        <option value="Pin" ${defaultType === 'Pin' ? 'selected' : ''}>Pin</option>
                        <option value="Tweet" ${defaultType === 'Tweet' ? 'selected' : ''}>Tweet</option>
                        <option value="Other" ${defaultType === 'Other' ? 'selected' : ''}>Other</option>
                    </select>
                    <input type="number" placeholder="0" class="post-views" value="${data.views || ''}" ${!isEditing ? 'readonly' : ''}>
                    <input type="number" placeholder="0" class="post-likes" value="${data.likes || ''}" ${!isEditing ? 'readonly' : ''}>
                    <input type="number" placeholder="0" class="post-comments" value="${data.comments || ''}" ${!isEditing ? 'readonly' : ''}>
                    <input type="number" placeholder="0" class="post-saves" value="${data.saves || ''}" ${!isEditing ? 'readonly' : ''}>
                    <input type="number" placeholder="0" class="post-shares" value="${data.shares || ''}" ${!isEditing ? 'readonly' : ''}>
                    <input type="number" placeholder="0" class="post-new-followers ${followersClass}" value="${newFollowersValue}" ${!isEditing ? 'readonly' : ''}>
                    <div class="engagement-rate" id="rate-${postId}">0%</div>
                    <input type="text" placeholder="Additional notes" class="post-notes" value="${(data.notes || '').replace(/"/g, '&quot;')}" ${!isEditing ? 'readonly' : ''}>
                    <div class="post-actions">
                        ${saveButtonHTML}
                    </div>
                </div>`;
        }


        // FIXED: Safe edit/cancel system that preserves data
        function editPost(postId) {
            console.log('Editing post:', postId);

            if (editingPostId !== null && editingPostId !== postId) {
                alert('Please save or cancel the currently editing post before editing another.');
                return;
            }

            const postDiv = document.querySelector(`[data-post-id="${postId}"]`);
            if (!postDiv) {
                console.error('Post not found:', postId);
                return;
            }

            // Get the platform from the postDiv's dataset
            const platform = postDiv.dataset.platform;

            // Collect current data from the *displayed* non-editable fields (before re-render)
            const currentData = {
                description: postDiv.querySelector('.post-description').value,
                type: postDiv.querySelector('.post-type').value,
                views: postDiv.querySelector('.post-views').value,
                likes: postDiv.querySelector('.post-likes').value,
                comments: postDiv.querySelector('.post-comments').value,
                saves: postDiv.querySelector('.post-saves').value,
                shares: postDiv.querySelector('.post-shares').value,
                newFollowers: postDiv.querySelector('.post-new-followers').value,
                notes: postDiv.querySelector('.post-notes').value
            };

            // Store the original data for potential cancellation
            originalPostData[postId] = { ...currentData };

            editingPostId = postId;
            postDiv.classList.add('editing');
            postDiv.innerHTML = createPostHTML(postId, platform, currentData, true);

            // Re-attach input event listeners to the editable fields
            setupPostEntryListeners(postDiv);

            setTimeout(() => {
                const viewsEl = postDiv.querySelector('.post-views');
                const followersEl = postDiv.querySelector('.post-new-followers');
                if (viewsEl) calculateEngagement(viewsEl);
                if (followersEl) updateFollowersDisplay(followersEl);
            }, 0);
        }

        async function savePost(postId) {
            console.log('Saving post:', postId);

            const postDiv = document.querySelector(`[data-post-id="${postId}"]`);
            if (!postDiv) {
                console.error('Post not found:', postId);
                return;
            }

            const platform = postDiv.dataset.platform;

            // Collect current (potentially edited) data from the input fields
            const currentData = {
                description: postDiv.querySelector('.post-description').value,
                type: postDiv.querySelector('.post-type').value,
                views: postDiv.querySelector('.post-views').value,
                likes: postDiv.querySelector('.post-likes').value,
                comments: postDiv.querySelector('.post-comments').value,
                saves: postDiv.querySelector('.post-saves').value,
                shares: postDiv.querySelector('.post-shares').value,
                newFollowers: postDiv.querySelector('.post-new-followers').value,
                notes: postDiv.querySelector('.post-notes').value,
                createdAt: postDiv.dataset.createdAt // Preserve creation date
            };

            console.log('Saving collected data:', currentData);

            editingPostId = null;
            postDiv.classList.remove('editing');

            // Re-render to read-only view
            postDiv.innerHTML = createPostHTML(postId, platform, currentData, false);

            // Clear stored original data
            delete originalPostData[postId];

            setTimeout(() => {
                const viewsEl = postDiv.querySelector('.post-views');
                const followersEl = postDiv.querySelector('.post-new-followers');
                if (viewsEl) calculateEngagement(viewsEl);
                if (followersEl) updateFollowersDisplay(followersEl);
                updatePlatformSummary(platform);
                updateOverallSummary();
            }, 0); // Use 0 timeout to allow DOM update first

            // Save to database
            if (currentUser && !initializationError) {
                try {
                    await saveData();
                    console.log('Post data saved successfully to database');
                } catch (error) {
                    console.error('Database save error:', error);
                }
            }
        }

        function cancelEdit(postId) {
            console.log('Cancelling edit for post:', postId);

            const postDiv = document.querySelector(`[data-post-id="${postId}"]`);
            if (!postDiv) return;

            const platform = postDiv.dataset.platform;

            // If this post has stored original data, restore it
            if (originalPostData[postId]) {
                editingPostId = null;
                postDiv.classList.remove('editing');

                // Restore the original data
                const originalData = originalPostData[postId];
                originalData.createdAt = postDiv.dataset.createdAt; // Ensure creation date is preserved
                postDiv.innerHTML = createPostHTML(postId, platform, originalData, false);

                // Clear stored data
                delete originalPostData[postId];

                setTimeout(() => {
                    const viewsEl = postDiv.querySelector('.post-views');
                    const followersEl = postDiv.querySelector('.post-new-followers');
                    if (viewsEl) calculateEngagement(viewsEl);
                    if (followersEl) updateFollowersDisplay(followersEl);
                    updatePlatformSummary(platform);
                    updateOverallSummary();
                }, 0);
            } else {
                // This is a new post that was created in editing mode - remove it
                removePost(postId); // Pass postId directly
            }
            editingPostId = null; // Ensure editingPostId is reset
        }

        function removePost(postId) {
            const postEntry = document.querySelector(`[data-post-id="${postId}"]`);
            if (!postEntry) return;

            const platform = postEntry.dataset.platform;

            console.log('Removing post:', postId, 'from platform:', platform);

            if (editingPostId === postId) {
                editingPostId = null;
            }

            // Clear any stored original data
            delete originalPostData[postId];

            // Remove the post entry
            postEntry.remove();

            // Check if there are any other post entries for this platform
            const container = document.getElementById(platform + '-posts');
            const remainingPosts = container.querySelectorAll('.post-entry');

            // If no posts are left, remove the header, add button, and summary
            if (remainingPosts.length === 0) {
                const headerDiv = container.querySelector('.post-header');
                if (headerDiv) headerDiv.remove();

                const addButton = container.querySelector('.add-post-button');
                if (addButton) addButton.remove();

                const summary = container.querySelector('.platform-summary-section');
                if (summary) summary.remove();
            }

            updatePlatformSummary(platform);
            updateOverallSummary();

            if (currentUser && !initializationError) {
                saveData().then(() => {
                    console.log('Post removal saved successfully');
                }).catch(error => {
                    console.error('Save error:', error);
                });
            }
        }

        function calculateEngagement(element) {
            const postEntry = element.closest('.post-entry');
            if (!postEntry) return;

            const views = parseFloat(postEntry.querySelector('.post-views').value) || 0;
            const likes = parseFloat(postEntry.querySelector('.post-likes').value) || 0;
            const comments = parseFloat(postEntry.querySelector('.post-comments').value) || 0;
            const saves = parseFloat(postEntry.querySelector('.post-saves').value) || 0;
            const shares = parseFloat(postEntry.querySelector('.post-shares').value) || 0;

            const rateElement = postEntry.querySelector('.engagement-rate');
            if (!rateElement) return;

            if (views > 0) {
                const totalEngagement = likes + comments + saves + shares;
                const engagementRate = (totalEngagement / views) * 100;

                rateElement.textContent = engagementRate.toFixed(2) + '%';

                rateElement.className = 'engagement-rate '; // Reset class
                if (engagementRate >= 6) {
                    rateElement.classList.add('rate-excellent');
                } else if (engagementRate >= 4) {
                    rateElement.classList.add('rate-good');
                } else if (engagementRate >= 2) {
                    rateElement.classList.add('rate-average');
                } else {
                    rateElement.classList.add('rate-poor');
                }
            } else {
                rateElement.textContent = '0%';
                rateElement.className = 'engagement-rate'; // No specific rate class if views are 0
            }

            const platform = postEntry.dataset.platform;
            if (platform) {
                updatePlatformSummary(platform);
            }
        }

        function updatePlatformSummary(platform) {
            const container = document.getElementById(platform + '-posts');
            const summaryElement = document.getElementById(platform + '-summary');

            if (!container || !summaryElement) return;

            const posts = container.querySelectorAll('.post-entry');

            let totalPosts = posts.length;
            let totalViews = 0;
            let totalNewFollowers = 0;
            let engagementRates = [];
            let bestPost = { rate: -1, description: '' }; // Initialize with -1 to properly find best 0
            let worstPost = { rate: Infinity, description: '' };
            let bestFollowerPost = { followers: -Infinity, description: '' }; // Use -Infinity to correctly find best

            posts.forEach(post => {
                const views = parseFloat(post.querySelector('.post-views').value) || 0;
                const likes = parseFloat(post.querySelector('.post-likes').value) || 0;
                const comments = parseFloat(post.querySelector('.post-comments').value) || 0;
                const saves = parseFloat(post.querySelector('.post-saves').value) || 0;
                const shares = parseFloat(post.querySelector('.post-shares').value) || 0;
                const newFollowers = parseInt(post.querySelector('.post-new-followers').value) || 0;
                const description = post.querySelector('.post-description').value || 'Untitled post';

                totalViews += views;
                totalNewFollowers += newFollowers;

                const rate = views > 0 ? ((likes + comments + saves + shares) / views) * 100 : 0;
                engagementRates.push(rate);

                if (rate > bestPost.rate) {
                    bestPost = { rate, description };
                }

                if (rate < worstPost.rate) { // Use correct comparison for worstPost
                    worstPost = { rate, description };
                }

                if (newFollowers > bestFollowerPost.followers) {
                    bestFollowerPost = { followers: newFollowers, description };
                }
            });

            const avgEngagement = engagementRates.length > 0
                ? engagementRates.reduce((a, b) => a + b, 0) / engagementRates.length
                : 0;

            let summaryHTML = '<strong>Posts:</strong> ' + totalPosts + '<br><strong>Total Views:</strong> ' + totalViews.toLocaleString() + '<br><strong>Total New Followers:</strong> <span class="new-followers ' + (totalNewFollowers > 0 ? 'positive' : totalNewFollowers < 0 ? 'negative' : 'zero') + '">' + (totalNewFollowers > 0 ? '+' : '') + totalNewFollowers + '</span><br><strong>Average Engagement Rate:</strong> ' + avgEngagement.toFixed(2) + '%<br>';

            if (bestPost.rate >= 0) { // Check if a valid best post was found
                summaryHTML += '<strong>Best Post:</strong> ' + bestPost.description + ' (' + bestPost.rate.toFixed(2) + '%)<br>';
            }

            if (totalPosts > 1 && worstPost.rate !== Infinity && worstPost.rate !== bestPost.rate) { // Ensure worstPost is not default Infinity and different from best
                summaryHTML += '<strong>Worst Post:</strong> ' + worstPost.description + ' (' + worstPost.rate.toFixed(2) + '%)<br>';
            }

            if (bestFollowerPost.followers > -Infinity) { // Check if a valid best follower post was found
                summaryHTML += '<strong>Best for Followers:</strong> ' + bestFollowerPost.description + ' (' + (bestFollowerPost.followers > 0 ? '+' : '') + bestFollowerPost.followers + ')<br>';
            }

            summaryElement.innerHTML = summaryHTML;
        }


        function updateOverallSummary() {
            const summaryGrid = document.getElementById('summaryGrid');

            let totalPosts = 0;
            let totalViews = 0;
            let totalNewFollowers = 0;
            let allEngagementRates = [];
            const platforms = ['instagram', 'facebook', 'threads', 'tiktok', 'pinterest'];

            platforms.forEach(platform => {
                const container = document.getElementById(platform + '-posts');
                if (container) {
                    const posts = container.querySelectorAll('.post-entry');
                    totalPosts += posts.length;

                    posts.forEach(post => {
                        const views = parseFloat(post.querySelector('.post-views').value) || 0;
                        const likes = parseFloat(post.querySelector('.post-likes').value) || 0;
                        const comments = parseFloat(post.querySelector('.post-comments').value) || 0;
                        const saves = parseFloat(post.querySelector('.post-saves').value) || 0;
                        const shares = parseFloat(post.querySelector('.post-shares').value) || 0;
                        const newFollowers = parseInt(post.querySelector('.post-new-followers').value) || 0;

                        totalViews += views;
                        totalNewFollowers += newFollowers;

                        if (views > 0) {
                            const rate = ((likes + comments + saves + shares) / views) * 100;
                            allEngagementRates.push(rate);
                        }
                    });
                }
            });

            const avgEngagement = allEngagementRates.length > 0
                ? allEngagementRates.reduce((a, b) => a + b, 0) / allEngagementRates.length
                : 0;

            const bestRate = allEngagementRates.length > 0 ? Math.max(...allEngagementRates) : 0;

            summaryGrid.innerHTML = `
                <div class="summary-card">
                    <div class="summary-number">${totalPosts}</div>
                    <div class="summary-label">Total Posts</div>
                </div>
                <div class="summary-card">
                    <div class="summary-number">${totalViews.toLocaleString()}</div>
                    <div class="summary-label">Total Views</div>
                </div>
                <div class="summary-card">
                    <div class="summary-number ${totalNewFollowers > 0 ? 'positive' : totalNewFollowers < 0 ? 'negative' : ''}" style="color: ${totalNewFollowers > 0 ? '#38a169' : totalNewFollowers < 0 ? '#e53e3e' : 'var(--account-color)'}">
                        ${totalNewFollowers > 0 ? '+' : ''}${totalNewFollowers}
                    </div>
                    <div class="summary-label">New Followers</div>
                </div>
                <div class="summary-card">
                    <div class="summary-number">${avgEngagement.toFixed(1)}%</div>
                    <div class="summary-label">Avg Engagement</div>
                </div>
                <div class="summary-card">
                    <div class="summary-number">${bestRate.toFixed(1)}%</div>
                    <div class="summary-label">Best Post Rate</div>
                </div>`;
        }

        function updateTimeAnalysis() {
            const creation = parseFloat(document.getElementById('time-creation')?.value) || 0;
            const management = parseFloat(document.getElementById('time-management')?.value) || 0;
            const engagement = parseFloat(document.getElementById('time-engagement')?.value) || 0;
            const analytics = parseFloat(document.getElementById('time-analytics')?.value) || 0;

            const total = creation + management + engagement + analytics;

            let analysis = '<strong>Total Time Investment:</strong> ' + total + ' hours<br><br>';

            if (total > 0) {
                analysis += '<strong>Time Breakdown:</strong><br>';
                analysis += '• Content Creation: ' + creation + 'h (' + ((creation/total)*100).toFixed(1) + '%)<br>';
                analysis += '• Platform Management: ' + management + 'h (' + ((management/total)*100).toFixed(1) + '%)<br>';
                analysis += '• Engagement: ' + engagement + 'h (' + ((engagement/total)*100).toFixed(1) + '%)<br>';
                analysis += '• Analytics: ' + analytics + 'h (' + ((analytics/total)*100).toFixed(1) + '%)<br><br>';

                if (creation > management + engagement + analytics) {
                    analysis += '<span style="color: #38a169;">✓ Good balance - spending most time on content creation</span>';
                } else if (management > creation) {
                    analysis += '<span style="color: #d69e2e;">⚠ Consider reducing management time vs. content creation</span>';
                }
            }

            document.getElementById('timeAnalysis').innerHTML = analysis;

            // Trigger save after updating analysis
            if (currentUser && !initializationError) {
                saveData();
            }
        }

        function generateReport() {
            const rangeData = collectCurrentRangeData();
            const reportText = generateReportText(rangeData);
            const blob = new Blob([reportText], { type: 'text/plain' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'social-media-report-' + rangeData.startDate + '.txt';
            document.body.appendChild(link); // Append to body to make it clickable
            link.click();
            document.body.removeChild(link); // Clean up

            alert('Report generated and downloaded!');
        }

        function generateReportText(rangeData) {
            const platforms = ['instagram', 'facebook', 'threads', 'tiktok', 'pinterest'];
            let report = 'Social Media Analytics Report\n';
            report += 'Date Range: ' + rangeData.startDate + ' - ' + rangeData.endDate + '\n\n';

            platforms.forEach(platform => {
                const platformData = rangeData.platforms[platform];
                if (platformData && platformData.posts && platformData.posts.length > 0) {
                    report += platform.charAt(0).toUpperCase() + platform.slice(1) + ':\n';
                    report += 'Posts: ' + platformData.posts.length + '\n';

                    let totalViews = 0;
                    let totalEngagements = 0;
                    let totalNewFollowers = 0;

                    platformData.posts.forEach((post, index) => {
                        const views = post.views || 0;
                        const engagements = (post.likes || 0) + (post.comments || 0) + (post.saves || 0) + (post.shares || 0);
                        const newFollowers = post.newFollowers || 0;

                        totalViews += views;
                        totalEngagements += engagements;
                        totalNewFollowers += newFollowers;

                        if (views > 0) {
                            const rate = (engagements / views) * 100;
                            report += '- ' + (post.description || ('Post ' + (index + 1))) + ': ' + views + ' views, ' + rate.toFixed(2) + '% engagement';
                            if (newFollowers !== 0) {
                                report += ', ' + (newFollowers > 0 ? '+' : '') + newFollowers + ' followers';
                            }
                            report += '\n';
                        }
                    });

                    if (totalViews > 0) {
                        const avgRate = (totalEngagements / totalViews) * 100;
                        report += 'Average engagement: ' + avgRate.toFixed(2) + '%\n';
                    }

                    if (totalNewFollowers !== 0) {
                        report += 'Total new followers: ' + (totalNewFollowers > 0 ? '+' : '') + totalNewFollowers + '\n';
                    }

                    report += '\n';
                }
            });

            return report;
        }

        function exportData() {
            const rangeData = collectCurrentRangeData();
            const dataStr = JSON.stringify(rangeData, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});

            const link = document.createElement('a');
            link.href = URL.createObjectURL(dataBlob);
            link.download = 'social-media-data-' + rangeData.startDate + '.json';
            document.body.appendChild(link); // Append to body to make it clickable
            link.click();
            document.body.removeChild(link); // Clean up
        }

        function processBulkData() {
            const csvData = document.getElementById('csvInput').value.trim();
            if (!csvData) {
                alert('Please enter CSV data first');
                return;
            }

            processCSVString(csvData, 'paste');
        }

        function processCSVFile() {
            const fileInput = document.getElementById('csvFileInput');
            const file = fileInput.files[0];

            if (!file) {
                alert('Please select a CSV file first');
                return;
            }

            if (!file.name.toLowerCase().endsWith('.csv')) {
                alert('Please select a valid CSV file');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                const csvData = e.target.result;
                processCSVString(csvData, 'upload');
            };

            reader.onerror = function() {
                alert('Error reading file. Please try again.');
            };

            reader.readAsText(file);
        }

        // Helper for mapping platform names for display
        const platformDisplayNames = {
            'instagram': 'Instagram', 'facebook': 'Facebook', 'threads': 'Threads', 'tiktok': 'TikTok', 'pinterest': 'Pinterest'
        };

        function processCSVString(csvData, source) {
            const lines = csvData.split('\n');
            let headerProcessed = false;
            let addedCount = 0;
            const newPostsToAdd = []; // Array to store all posts to add

            for (let i = 0; i < lines.length; i++) {
                const line = lines[i].trim();
                if (!line) continue;

                if (!headerProcessed) {
                    // Simple check if the first line looks like a header
                    if (line.toLowerCase().includes('platform') && line.toLowerCase().includes('post type')) {
                        headerProcessed = true;
                        continue;
                    }
                    headerProcessed = true; // Assume no header if not explicitly found, proceed with data
                }

                const values = line.split(',').map(v => v.trim().replace(/"/g, ''));
                // Expected format: Platform, Post Type, Views, Likes, Comments, Saves, Shares, New Followers, Description (optional), Engagement Rate (optional)
                if (values.length < 8) continue; // Minimum required fields

                const platformRaw = values[0].toLowerCase().trim();
                const platform = Object.keys(platformDisplayNames).find(key => platformRaw.includes(key)) || platformRaw; // Try to map to known platforms
                const postType = values[1].trim();
                const views = parseInt(values[2]);
                const likes = parseInt(values[3]);
                const comments = parseInt(values[4]);
                const saves = parseInt(values[5]);
                const shares = parseInt(values[6]);
                const newFollowers = parseInt(values[7]);
                const description = values[8] || postType; // Use Post Type as description if not provided

                // Validate if it's a known platform
                if (Object.keys(platformDisplayNames).includes(platform)) {
                    newPostsToAdd.push({
                        platform, postType, views, likes, comments, saves, shares, newFollowers, description
                    });
                } else {
                    console.warn(`Skipping invalid platform in CSV: "${values[0]}"`);
                }
            }

            // Process all valid posts
            newPostsToAdd.forEach(postData => {
                const newId = ++postCounter;
                const container = document.getElementById(postData.platform + '-posts');
                if (!container) return; // Skip if platform container doesn't exist

                // Add header if it's the first post for this platform
                if (!container.querySelector('.post-header')) {
                    const headerDiv = document.createElement('div');
                    headerDiv.className = 'post-header';
                    headerDiv.innerHTML = '<div>Description</div><div>Type</div><div>Views</div><div>Likes</div><div>Comments</div><div>Saves</div><div>Shares</div><div>New Followers</div><div>Engagement</div><div>Notes</div><div>Actions</div>';
                    container.prepend(headerDiv);
                }

                const postDiv = document.createElement('div');
                postDiv.className = 'post-entry'; // Start as non-editing
                postDiv.dataset.postId = newId;
                postDiv.dataset.platform = postData.platform;
                postDiv.dataset.createdAt = new Date().toISOString();
                postDiv.innerHTML = createPostHTML(newId, postData.platform, postData, false); // Render as non-editable

                // Append just before the "Add Another Post" button or summary if they exist
                const existingAddButton = container.querySelector('.add-post-button');
                if (existingAddButton) {
                    existingAddButton.before(postDiv);
                } else {
                    container.appendChild(postDiv); // Append if no button exists yet
                }

                setupPostEntryListeners(postDiv); // Attach listeners

                setTimeout(() => {
                    const viewsEl = postDiv.querySelector('.post-views');
                    if (viewsEl) calculateEngagement(viewsEl);
                    const followersEl = postDiv.querySelector('.post-new-followers');
                    if (followersEl) updateFollowersDisplay(followersEl);
                }, 0);

                addedCount++;
            });

            if (newPostsToAdd.length > 0) {
                // Ensure Add Button and Summary are up-to-date and at the bottom after all adds
                Object.keys(platformDisplayNames).forEach(platformKey => {
                    const container = document.getElementById(platformKey + '-posts');
                    if (container && container.querySelector('.post-entry')) { // Only if there are posts
                        let addButton = container.querySelector('.add-post-button');
                        if (!addButton) {
                            addButton = document.createElement('div');
                            addButton.className = 'add-post-button';
                            addButton.innerHTML = `<button data-platform="${platformKey}" class="add-post-btn" style="background: #38a169; margin: 20px 0;">+ Add Another Post</button>`;
                            container.appendChild(addButton);
                        }

                        let summary = container.querySelector('.platform-summary-section');
                        if (!summary) {
                            summary = document.createElement('div');
                            summary.className = 'platform-summary-section';
                            summary.innerHTML = `<div style="margin-top: 20px; padding: 15px; background: #f0f8ff; border-radius: 8px;"><h4>${getPlatformIcon(platformKey)} Summary</h4><div id="${platformKey}-summary">Add posts to see summary</div></div>`;
                            container.appendChild(summary);
                        }
                        updatePlatformSummary(platformKey);
                        setupPostEntryListeners(addButton.querySelector('button')); // Reattach listener to add button
                    }
                });

                updateOverallSummary(); // Update overall summary once all adds are done

                if (currentUser && !initializationError) {
                    saveData().then(() => {
                        console.log('Bulk import data saved successfully');
                        alert(`✅ Successfully imported ${addedCount} posts from ${source === 'upload' ? 'file' : 'pasted data'}!`);
                    }).catch((error) => {
                        console.error('Save error:', error);
                        // Even if save to cloud fails, data is locally present.
                        alert(`✅ Successfully imported ${addedCount} posts! (Note: Cloud save failed - data exists locally)`);
                    });
                } else {
                    alert(`✅ Successfully imported ${addedCount} posts from ${source === 'upload' ? 'file' : 'pasted data'}!`);
                }

                if (source === 'paste') {
                    document.getElementById('csvInput').value = '';
                } else {
                    document.getElementById('csvFileInput').value = '';
                }
            } else {
                alert('No valid data found in CSV or incorrect format. Please check the data and try again.');
            }
        }


        // AI Screenshot Analysis functions would go here (same as before)
        async function callOpenAIVision(base64Image) {
            if (!userApiKey) {
                throw new Error('No API key provided');
            }

            const response = await fetch('https://api.openai.com/v1/chat/completions', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'Bearer ' + userApiKey
                },
                body: JSON.stringify({
                    model: "gpt-4o",
                    messages: [
                        {
                            role: "user",
                            content: [
                                {
                                    type: "text",
                                    text: 'Please analyze this social media analytics screenshot and extract the following data. Look for metrics like views, likes, comments, saves, shares, followers gained, engagement rate, etc. \n\nReturn ONLY a JSON object in this exact format (no other text):\n{\n    "success": true,\n    "data": {\n        "platform": "instagram|facebook|tiktok|threads|pinterest",\n        "postType": "post|reel|story|video|pin",\n        "views": 1234,\n        "likes": 89,\n        "comments": 12,\n        "saves": 15,\n        "shares": 5,\n        "newFollowers": 3,\n        "engagementRate": "8.48%",\n        "description": "brief description of what this post was about if visible"\n    }\n}\n\nIf you cannot extract meaningful data, return:\n{\n    "success": false,\n    "error": "reason why data could not be extracted"\n}\n\nLook carefully for any numbers related to engagement metrics including saves/bookmarks and follower gains. Sometimes they may be labeled differently (e.g., "reactions" instead of "likes", "bookmarks" instead of "saves", "reposts" instead of "shares", "followers gained" or "new followers", etc.).'
                                },
                                {
                                    type: "image_url",
                                    image_url: {
                                        url: 'data:image/jpeg;base64,' + base64Image
                                    }
                                }
                            ]
                        }
                    ],
                    max_tokens: 500
                })
            });

            if (!response.ok) {
                const errorData = await response.text();
                throw new Error('OpenAI API error: ' + response.status + ' - ' + errorData);
            }

            const result = await response.json();
            const content = result.choices[0].message.content;

            try {
                const jsonMatch = content.match(/\{[\s\S]*\}/);
                if (jsonMatch) {
                    return JSON.parse(jsonMatch[0]);
                } else {
                    throw new Error('No valid JSON found in response');
                }
            } catch (parseError) {
                console.error('JSON parse error:', parseError);
                return {
                    success: false,
                    error: 'Could not parse AI response'
                };
            }
        }

        function fileToBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.readAsDataURL(file);
                reader.onload = () => {
                    const base64 = reader.result.split(',')[1];
                    resolve(base64);
                };
                reader.onerror = error => reject(error);
            });
        }

        function addExtractedDataToTracker(buttonElement, index) {
            const resultDiv = buttonElement.closest('.analysis-result');
            const extractedData = JSON.parse(resultDiv.dataset.extractedData);
            const platformSelect = resultDiv.querySelector('#platform-' + index);
            const platform = platformSelect ? platformSelect.value : 'unknown';

            if (currentEntryMethod !== 'dashboard') {
                switchEntryMethod('dashboard');
            }

            // Manually add the post, then populate its fields
            addPost(platform);

            const container = document.getElementById(platform + '-posts');
            // Select the most recently added post (which will be the one just created by addPost)
            const lastPost = container.querySelector(`[data-post-id="${editingPostId}"]`); // Using editingPostId as it points to the newly created one

            if (lastPost && extractedData) {
                lastPost.querySelector('.post-description').value = extractedData.description || 'AI extracted post';

                const typeSelect = lastPost.querySelector('.post-type');
                if (extractedData.postType && typeSelect) {
                    const typeMap = {
                        'reel': 'Reel', 'post': 'Post', 'story': 'Story', 'carousel': 'Carousel',
                        'video': 'Video', 'pin': 'Pin', 'tweet': 'Tweet'
                    };
                    const mappedType = typeMap[extractedData.postType.toLowerCase()] || extractedData.postType;

                    for (let option of typeSelect.options) {
                        if (option.value.toLowerCase() === mappedType.toLowerCase()) {
                            option.selected = true;
                            break;
                        }
                    }
                    if (typeSelect.value === '') { // Fallback if no specific type matched but was set by AI
                        typeSelect.value = 'Other';
                    }
                }

                lastPost.querySelector('.post-views').value = extractedData.views || '';
                lastPost.querySelector('.post-likes').value = extractedData.likes || '';
                lastPost.querySelector('.post-comments').value = extractedData.comments || '';
                lastPost.querySelector('.post-saves').value = extractedData.saves || '';
                lastPost.querySelector('.post-shares').value = extractedData.shares || '';
                lastPost.querySelector('.post-new-followers').value = extractedData.newFollowers || '';

                // Trigger engagement calculation and follower display update
                const viewsInput = lastPost.querySelector('.post-views');
                if (viewsInput) {
                     calculateEngagement(viewsInput);
                }
                const followersInput = lastPost.querySelector('.post-new-followers');
                if (followersInput) {
                    updateFollowersDisplay(followersInput);
                }

                // Save the new post after populating details
                savePost(editingPostId); // Use editingPostId here as it's the id of the post just added

                alert('✅ Data added to ' + platformDisplayNames[platform] + ' dashboard and saved!');

                resultDiv.style.opacity = '0.6';
                buttonElement.textContent = 'Added ✓';
                buttonElement.disabled = true;
            }
        }

        async function analyzeScreenshot(file, index) {
            const resultsContainer = document.getElementById('analysisResults');

            const resultDiv = document.createElement('div');
            resultDiv.className = 'analysis-result';
            resultDiv.innerHTML = `
                <div class="analysis-header">
                    <h4>${file.name}</h4><div class="loading-spinner"></div>
                </div>
                <img class="screenshot-preview" src="${URL.createObjectURL(file)}" alt="Screenshot preview">
                <div class="status">Analyzing with AI...</div>
                <div class="extracted-data-grid" id="data-${index}"></div>
                <div class="actions" id="actions-${index}" style="display: none;">
                    <select id="platform-${index}" style="margin-right: 10px;">
                        <option value="instagram">Instagram</option>
                        <option value="facebook">Facebook</option>
                        <option value="threads">Threads</option>
                        <option value="tiktok">TikTok</option>
                        <option value="pinterest">Pinterest</option>
                    </select>
                    <button class="add-to-dashboard-ai-btn" data-index="${index}" style="background: #38a169;">Add to Dashboard</button>
                </div>`;
            resultsContainer.appendChild(resultDiv);

            // Attach listener to the newly created 'Add to Dashboard' button
            resultDiv.querySelector(`.add-to-dashboard-ai-btn[data-index="${index}"]`).addEventListener('click', (event) => {
                addExtractedDataToTracker(event.target, index);
            });

            try {
                const base64Image = await fileToBase64(file);
                const extractedData = await callOpenAIVision(base64Image);

                const statusDiv = resultDiv.querySelector('.status');
                const loadingSpinner = resultDiv.querySelector('.loading-spinner');
                const dataGrid = document.getElementById('data-' + index);
                const actions = document.getElementById('actions-' + index);

                loadingSpinner.style.display = 'none';
                statusDiv.innerHTML = '<div class="success-message">✅ Analysis complete!</div>';

                if (extractedData.success) {
                    dataGrid.innerHTML = `
                        <div class="data-field"><div class="data-label">Post Type</div><div class="data-value">${extractedData.data.postType || 'Unknown'}</div></div>
                        <div class="data-field"><div class="data-label">Views</div><div class="data-value">${extractedData.data.views || 0}</div></div>
                        <div class="data-field"><div class="data-label">Likes</div><div class="data-value">${extractedData.data.likes || 0}</div></div>
                        <div class="data-field"><div class="data-label">Comments</div><div class="data-value">${extractedData.data.comments || 0}</div></div>
                        <div class="data-field"><div class="data-label">Saves</div><div class="data-value">${extractedData.data.saves || 0}</div></div>
                        <div class="data-field"><div class="data-label">Shares</div><div class="data-value">${extractedData.data.shares || 0}</div></div>
                        <div class="data-field"><div class="data-label">New Followers</div><div class="data-value ${extractedData.data.newFollowers > 0 ? 'positive' : extractedData.data.newFollowers < 0 ? 'negative' : 'zero'}">${extractedData.data.newFollowers > 0 ? '+' : ''}${(extractedData.data.newFollowers || 0)}</div></div>
                        <div class="data-field"><div class="data-label">Engagement Rate</div><div class="data-value">${extractedData.data.engagementRate || 'Auto-calc'}</div></div>`;

                    resultDiv.dataset.extractedData = JSON.stringify(extractedData.data);

                    const platformSelect = document.getElementById('platform-' + index);
                    if (platformSelect && extractedData.data.platform) {
                        const aiPlatform = extractedData.data.platform.toLowerCase();
                        // Check if the AI-identified platform is one of our options
                        const optionExists = Array.from(platformSelect.options).some(option => option.value === aiPlatform);
                        if (optionExists) {
                            platformSelect.value = aiPlatform;
                        } else {
                            // Default to Instagram if AI platform is not recognized
                            platformSelect.value = 'instagram';
                        }
                    }

                    actions.style.display = 'block';
                } else {
                    statusDiv.innerHTML = '<div class="error-message">⚠ Could not extract data. Please try a clearer screenshot or enter manually.</div>';
                    dataGrid.innerHTML = '<p style="color: #718096; text-align: center;">No data extracted</p>';
                }

            } catch (error) {
                console.error('Analysis error:', error);
                const statusDiv = resultDiv.querySelector('.status');
                const loadingSpinner = resultDiv.querySelector('.loading-spinner');

                loadingSpinner.style.display = 'none';

                if (error.message.includes('401')) {
                    statusDiv.innerHTML = '<div class="error-message">⚠ Invalid API key. Please check your OpenAI API key.</div>';
                } else if (error.message.includes('429')) {
                    statusDiv.innerHTML = '<div class="error-message">⚠ API rate limit exceeded. Please wait a moment and try again.</div>';
                } else if (error.message.includes('insufficient_quota')) {
                    statusDiv.innerHTML = '<div class="error-message">⚠ Insufficient OpenAI credits. Please add credits to your account.</div>';
                } else {
                    statusDiv.innerHTML = '<div class="error-message">⚠ Analysis failed. Please try again or enter data manually.</div>';
                }
            }
        }

        function validateApiKey() {
            const apiKeyInput = document.getElementById('openaiApiKey');
            const saveBtn = document.getElementById('saveApiKeyBtn');
            const clearBtn = document.getElementById('clearApiKeyBtn');

            const apiKey = apiKeyInput.value.trim();
            const isValid = apiKey.startsWith('sk-') && apiKey.length > 20;

            saveBtn.disabled = !isValid;
            clearBtn.disabled = !(userApiKey || apiKey); // Enable clear if there's a stored key OR a new key typed

            if (isValid && !userApiKey) { // Only set userApiKey if it's the first time and valid
                userApiKey = apiKey;
                document.getElementById('apiKeyStatus').classList.remove('hidden');
                document.getElementById('uploadSection').classList.remove('hidden');

                apiKeyInput.placeholder = 'API Key saved ✅';
                apiKeyInput.style.backgroundColor = '#f0fff4';
                apiKeyInput.style.borderColor = '#48bb78';
                saveBtn.disabled = true;
                clearBtn.disabled = false;
            }
        }

        function saveApiKey() {
            const apiKeyInput = document.getElementById('openaiApiKey');
            const apiKey = apiKeyInput.value.trim();

            if (!apiKey.startsWith('sk-') || apiKey.length < 20) {
                alert('Please enter a valid OpenAI API key (starts with sk-)');
                return;
            }

            userApiKey = apiKey;
            console.log('API Key stored:', userApiKey ? 'Yes' : 'No');

            document.getElementById('apiKeyStatus').classList.remove('hidden');
            document.getElementById('uploadSection').classList.remove('hidden');

            apiKeyInput.placeholder = 'API Key saved ✅';
            apiKeyInput.style.backgroundColor = '#f0fff4';
            apiKeyInput.style.borderColor = '#48bb78';

            document.getElementById('saveApiKeyBtn').disabled = true;
            document.getElementById('clearApiKeyBtn').disabled = false;

            alert('✅ API Key saved! You can now upload screenshots for analysis.');
        }

        function clearApiKey() {
            userApiKey = null;
            console.log('API Key cleared');

            document.getElementById('apiKeyStatus').classList.add('hidden');
            document.getElementById('uploadSection').classList.add('hidden');
            document.getElementById('analysisResults').innerHTML = '';

            const apiKeyInput = document.getElementById('openaiApiKey');
            apiKeyInput.value = '';
            apiKeyInput.placeholder = 'sk-proj-...';
            apiKeyInput.setAttribute('type', 'password'); // show as password again
            apiKeyInput.style.backgroundColor = '';
            apiKeyInput.style.borderColor = '';

            document.getElementById('saveApiKeyBtn').disabled = true;
            document.getElementById('clearApiKeyBtn').disabled = true;

            alert('API Key cleared. Screenshots analysis is now disabled.');
        }

        function checkApiKeyStatus() {
            console.log('Checking API key status:', userApiKey ? 'Key exists' : 'No key');

            const apiKeyInput = document.getElementById('openaiApiKey');
            const saveBtn = document.getElementById('saveApiKeyBtn');
            const clearBtn = document.getElementById('clearApiKeyBtn');


            if (userApiKey) {
                document.getElementById('apiKeyStatus').classList.remove('hidden');
                document.getElementById('uploadSection').classList.remove('hidden');
                clearBtn.disabled = false;
                saveBtn.disabled = true; // Key is already set (and valid)

                apiKeyInput.placeholder = 'API Key saved ✅';
                apiKeyInput.value = ''; // Ensure field is empty but placeholder indicates saved
                apiKeyInput.setAttribute('type', 'text'); // Temporarily show it's not a password input
                apiKeyInput.style.backgroundColor = '#f0fff4';
                apiKeyInput.style.borderColor = '#48bb78';
            } else {
                document.getElementById('apiKeyStatus').classList.add('hidden');
                document.getElementById('uploadSection').classList.add('hidden');
                saveBtn.disabled = true; // No key, so can't save until something is typed
                clearBtn.disabled = true; // No key to clear

                apiKeyInput.value = '';
                apiKeyInput.placeholder = 'sk-proj-...';
                apiKeyInput.setAttribute('type', 'password');
                apiKeyInput.style.backgroundColor = '';
                apiKeyInput.style.borderColor = '';
            }
        }

        async function analyzeScreenshots(event) {
            if (!userApiKey) {
                alert('Please enter your OpenAI API key first to use screenshot analysis.');
                return;
            }

            const files = event.target.files;
            const resultsContainer = document.getElementById('analysisResults');

            if (files.length === 0) return;

            resultsContainer.innerHTML = '<h3>Analyzing Screenshots...</h3>'; // Clear previous results

            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                await analyzeScreenshot(file, i);
            }
            event.target.value = null; // Clear the input so same file can be selected again
        }

        // Account Management Functions
        function switchAccount() {
            const selectedAccountId = document.getElementById('currentAccountSelect').value;
            if (selectedAccountId !== currentAccountId) {
                currentAccountId = selectedAccountId;
                updateCurrentAccountDisplay();
                applyAccountTheme();
                loadUserData(); // Reload data for the new account
                if (currentUser && !initializationError) {
                    saveUserAccounts(); // Save currentAccountId preference
                }
            }
        }

        function updateCurrentAccountDisplay() {
            const account = userAccounts[currentAccountId];
            if (account) {
                document.getElementById('currentAccountName').textContent = account.name;
                document.getElementById('currentAccountDescription').textContent = account.description || '';
            } else {
                // Fallback for missing account (e.g., if deleted)
                currentAccountId = 'default';
                updateCurrentAccountDisplay();
            }
        }

        function applyAccountTheme() {
            const account = userAccounts[currentAccountId];
            const color = account ? (account.color || '#667eea') : '#667eea'; // Default if account is null/undefined

            const lighterColor = lightenColor(color, 0.9);
            const darkerColor = darkenColor(color, 0.1);

            document.documentElement.style.setProperty('--account-color', color);
            document.documentElement.style.setProperty('--account-color-light', lighterColor);
            document.documentElement.style.setProperty('--account-color-dark', darkerColor);

            console.log('Applied theme:', color, 'for account:', account ? account.name : 'Unknown');
        }

        function lightenColor(color, amount) {
            let hex = color.startsWith('#') ? color.slice(1) : color;
            let num = parseInt(hex, 16);

           let r = (num >> 16) + Math.round(255 * amount);
           let g = ((num >> 8) & 0x00ff) + Math.round(255 * amount);
           let b = (num & 0x0000ff) + Math.round(255 * amount);

           r = Math.min(255, r);
           g = Math.min(255, g);
           b = Math.min(255, b);

           return '#' + ((1 << 24) + (r << 16) + (g << 8) + b).toString(16).slice(1);
        }

        function darkenColor(color, amount) {
            let hex = color.startsWith('#') ? color.slice(1) : color;
            let num = parseInt(hex, 16);

           let r = (num >> 16) - Math.round(255 * amount);
           let g = ((num >> 8) & 0x00ff) - Math.round(255 * amount);
           let b = (num & 0x0000ff) - Math.round(255 * amount);

           r = Math.max(0, r);
           g = Math.max(0, g);
           b = Math.max(0, b);

           return '#' + ((1 << 24) + (r << 16) + (g << 8) + b).toString(16).slice(1);
        }

        function showCreateAccountModal() {
            editingAccountId = null;
            document.getElementById('modalTitle').textContent = 'Create New Account';
            document.getElementById('accountName').value = '';
            document.getElementById('accountDescription').value = '';
            document.getElementById('accountColor').value = '#667eea';
            document.getElementById('saveAccountBtn').textContent = 'Create Account';
            document.getElementById('accountModal').classList.remove('hidden');
            document.getElementById('accountModal').style.display = 'block';
        }

        function showManageAccountsModal() {
            populateAccountsList();
            document.getElementById('manageModal').classList.remove('hidden');
            document.getElementById('manageModal').style.display = 'block';
        }

        function closeAccountModal() {
            document.getElementById('accountModal').classList.add('hidden');
            document.getElementById('accountModal').style.display = 'none';
            editingAccountId = null;
        }

        function closeManageModal() {
            document.getElementById('manageModal').classList.add('hidden');
            document.getElementById('manageModal').style.display = 'none';
        }

        async function saveAccount() {
            const name = document.getElementById('accountName').value.trim();
            const description = document.getElementById('accountDescription').value.trim();
            const color = document.getElementById('accountColor').value;

            if (!name) {
                alert('Please enter an account name');
                return;
            }

            if (editingAccountId) {
                userAccounts[editingAccountId].name = name;
                userAccounts[editingAccountId].description = description;
                userAccounts[editingAccountId].color = color;
            } else {
                const accountId = 'account_' + Date.now();
                userAccounts[accountId] = {
                    id: accountId,
                    name: name,
                    description: description,
                    color: color,
                    createdAt: new Date().toISOString()
                };

                currentAccountId = accountId; // Automatically switch to the newly created account
            }

            populateAccountsDropdown();
            updateCurrentAccountDisplay(); // Update display for the newly active account
            applyAccountTheme();

            if (currentUser && !initializationError) {
                await saveUserAccounts();
            }

            closeAccountModal();
            alert(editingAccountId ? 'Account updated successfully!' : 'Account created successfully!');
            loadUserData(); // Reload data for the switched/updated account
        }

        function editAccount(accountId) {
             if (accountId === 'default') {
                alert('The default account cannot be edited.');
                return;
             }

            editingAccountId = accountId;
            const account = userAccounts[accountId];

            document.getElementById('modalTitle').textContent = 'Edit Account';
            document.getElementById('accountName').value = account.name;
            document.getElementById('accountDescription').value = account.description || '';
            document.getElementById('accountColor').value = account.color;
            document.getElementById('saveAccountBtn').textContent = 'Update Account';
            document.getElementById('accountModal').classList.remove('hidden');
            document.getElementById('accountModal').style.display = 'block';
        }

        async function deleteAccount(accountId) {
            if (accountId === 'default') {
                alert('Cannot delete the default account');
                return;
            }

            if (!confirm('Are you sure you want to delete "' + userAccounts[accountId].name + '"? This will also delete ALL associated data (posts, time logs, etc.) for this account.')) {
                return;
            }

            if (currentAccountId === accountId) {
                currentAccountId = 'default'; // Switch to default if current account is deleted
                updateCurrentAccountDisplay();
                applyAccountTheme();
            }

            delete userAccounts[accountId]; // Remove from local userAccounts object

            populateAccountsDropdown();
            populateAccountsList();

            if (currentUser && !initializationError) {
                try {
                    // Delete all date ranges (data) under this account
                    const dateRangesRef = collection(db, 'users', currentUser.uid, 'accounts', accountId, 'dateRanges');
                    const snapshot = await getDocs(dateRangesRef);
                    const deleteDataPromises = snapshot.docs.map(doc => deleteDoc(doc.ref));
                    await Promise.all(deleteDataPromises);

                    // Delete the account metadata itself
                    await deleteDoc(doc(db, 'users', currentUser.uid, 'accounts', accountId));

                    await saveUserAccounts(); // Save the updated list of accounts
                } catch (error) {
                    console.error('Error deleting account data from Firebase:', error);
                    alert('Error deleting account data from cloud. Please try again.');
                }
            }

            alert('Account deleted successfully');
            loadUserData(); // Reload data for the new current account (default)
        }

        function populateAccountsDropdown() {
            const dropdown = document.getElementById('currentAccountSelect');
            dropdown.innerHTML = '';

            // Ensure 'default' account exists if it was somehow removed or not initialized properly
            if (!userAccounts['default']) {
                userAccounts['default'] = {
                    id: 'default',
                    name: 'Default Account',
                    description: '',
                    color: '#667eea',
                    createdAt: new Date().toISOString()
                };
            }

            // Convert and sort accounts (e.g., by creation date or name to maintain consistency)
            const sortedAccounts = Object.values(userAccounts).sort((a, b) => {
                if (a.id === 'default') return -1; // Default account always first
                if (b.id === 'default') return 1;
                return new Date(a.createdAt).getTime() - new Date(b.createdAt).getTime();
            });


            sortedAccounts.forEach(account => {
                const option = document.createElement('option');
                option.value = account.id;
                option.textContent = account.name;
                if (account.id === currentAccountId) {
                    option.selected = true;
                }
                dropdown.appendChild(option);
            });
        }

        function populateAccountsList() {
            const container = document.getElementById('accountsList');
            container.innerHTML = '';

            const sortedAccounts = Object.values(userAccounts).sort((a, b) => {
                if (a.id === 'default') return -1;
                if (b.id === 'default') return 1;
                return new Date(a.createdAt).getTime() - new Date(b.createdAt).getTime();
            });

            sortedAccounts.forEach(account => {
                const accountDiv = document.createElement('div');
                accountDiv.className = 'account-item ' + (account.id === currentAccountId ? 'current-account' : '');
                accountDiv.innerHTML = `
                    <div class="account-info">
                        <h4>${account.name} ${account.id === currentAccountId ? ' (Current)' : ''}</h4>
                        <p>${account.description || 'No description'}</p>
                        <div style="width: 20px; height: 20px; background: ${account.color}; border-radius: 50%; margin-top: 5px;"></div>
                    </div>
                    <div class="account-actions">
                        ${account.id !== 'default' ? `
                            <button class="edit-account-btn" data-account-id="${account.id}" style="background: #3182ce;">Edit</button>
                            <button class="delete-account-btn" data-account-id="${account.id}" style="background: #e53e3e;">Delete</button>
                        ` : `<span style="color: #718096; font-size: 12px;">Default account</span>`}
                    </div>`;
                container.appendChild(accountDiv);
            });
             setupManageAccountModalListeners(container); // Attach listeners to newly created buttons
        }

        async function saveUserAccounts() {
            if (!currentUser || initializationError) return;

            try {
                // The main accounts document storing all metadata for a user's accounts
                const settingsDocRef = doc(db, 'users', currentUser.uid, 'settings', 'accounts');

                // Prepare userAccounts object for saving (Firebase can't save functions, etc.)
                const accountsToSave = {};
                for (const id in userAccounts) {
                    accountsToSave[id] = { ...userAccounts[id] }; // Copy to avoid issues with direct modification
                }

                await setDoc(settingsDocRef, {
                    accounts: accountsToSave,
                    currentAccountId: currentAccountId,
                    lastUpdated: new Date().toISOString()
                }, { merge: true }); // Use merge to avoid overwriting other settings if they exist

            } catch (error) {
                console.error('Error saving accounts to Firebase:', error);
                showError('Failed to save account settings: ' + error.message);
            }
        }

        async function loadUserAccounts() {
            if (!currentUser || initializationError) return;

            try {
                const settingsDocRef = doc(db, 'users', currentUser.uid, 'settings', 'accounts');
                const accountsSnap = await getDoc(settingsDocRef);

                if (accountsSnap.exists()) {
                    const data = accountsSnap.data();
                    if (data.accounts) {
                        userAccounts = data.accounts;
                        // Ensure each loaded account has a createdAt property if it's missing (for sorting)
                        for (const accountId in userAccounts) {
                            if (!userAccounts[accountId].createdAt) {
                                userAccounts[accountId].createdAt = new Date().toISOString();
                            }
                        }
                    }
                    currentAccountId = data.currentAccountId || 'default';
                }

                // Always ensure default account exists
                if (!userAccounts['default']) {
                    userAccounts['default'] = {
                        id: 'default',
                        name: 'Default Account',
                        description: '',
                        color: '#667eea',
                        createdAt: new Date().toISOString()
                    };
                }

                populateAccountsDropdown();
                updateCurrentAccountDisplay();
                applyAccountTheme();
            } catch (error) {
                console.error('Error loading accounts from Firebase:', error);
                showError('Failed to load account settings: ' + error.message);
            }
        }

        // --- Event Listener Setup ---
        function setupEventListeners() {
            // Authentication
            document.getElementById('signInBtn').addEventListener('click', signInWithGoogle);
            document.getElementById('signOutBtn').addEventListener('click', signOut);

            // Date Range
            document.getElementById('startDatePicker').addEventListener('change', updateDateRange);
            document.getElementById('endDatePicker').addEventListener('change', updateDateRange);
            document.getElementById('thisWeekBtn').addEventListener('click', setThisWeek);
            document.getElementById('lastWeekBtn').addEventListener('click', setLastWeek);
            document.getElementById('generateReportBtn').addEventListener('click', generateReport);
            document.getElementById('exportDataBtn').addEventListener('click', exportData);

             // Account Management
            document.getElementById('currentAccountSelect').addEventListener('change', switchAccount);
            document.getElementById('addNewAccountBtn').addEventListener('click', showCreateAccountModal);
            document.getElementById('manageAccountsBtn').addEventListener('click', showManageAccountsModal);

            // Entry Method Selection
            document.querySelectorAll('.entry-method').forEach(button => {
                button.addEventListener('click', () => switchEntryMethod(button.dataset.method));
            });

            // Bulk CSV Method Selection
            document.querySelectorAll('.csv-method').forEach(button => {
                button.addEventListener('click', () => switchCSVMethod(button.dataset.csvMethod));
            });
            document.getElementById('processBulkDataBtn').addEventListener('click', processBulkData);
            document.getElementById('processCSVFileBtn').addEventListener('click', processCSVFile);

            // AI Screenshot Analysis
            document.getElementById('openaiApiKey').addEventListener('input', validateApiKey);
            document.getElementById('saveApiKeyBtn').addEventListener('click', saveApiKey);
            document.getElementById('clearApiKeyBtn').addEventListener('click', clearApiKey);
            document.querySelector('.file-drop-zone').addEventListener('click', () => document.getElementById('screenshotInput').click()); // For drop zone visual cue
            document.getElementById('screenshotInput').addEventListener('change', analyzeScreenshots);


            // Time Investment Inputs - using input event for immediate response
            document.getElementById('time-creation')?.addEventListener('input', updateTimeAnalysisAndSave);
            document.getElementById('time-management')?.addEventListener('input', updateTimeAnalysisAndSave);
            document.getElementById('time-engagement')?.addEventListener('input', updateTimeAnalysisAndSave);
            document.getElementById('time-analytics')?.addEventListener('input', updateTimeAnalysisAndSave);

            // Modals
            document.getElementById('closeAccountModalBtn').addEventListener('click', closeAccountModal);
            document.getElementById('cancelAccountModalBtn').addEventListener('click', closeAccountModal);
            document.getElementById('saveAccountBtn').addEventListener('click', saveAccount);
            document.getElementById('closeManageModalBtn').addEventListener('click', closeManageModal);
            document.getElementById('closeManageModalFooterBtn').addEventListener('click', closeManageModal);
        }

        // Helper to debounce or combine updateTimeAnalysis and saveData, if needed
        let saveTimeout;
        function updateTimeAnalysisAndSave() {
            clearTimeout(saveTimeout);
            saveTimeout = setTimeout(() => {
                updateTimeAnalysis();
            }, 500); // Debounce by 500ms
        }


        // Setup listeners for dynamically created platform content
        function setupPlatformContentListeners() {
            document.querySelectorAll('.platform-header').forEach(header => {
                // Ensure existing listeners are removed to prevent duplicates
                header.removeEventListener('click', handlePlatformHeaderClick);
                header.addEventListener('click', handlePlatformHeaderClick);
            });
            document.querySelectorAll('.add-post-platform-btn').forEach(button => {
                 button.removeEventListener('click', handleAddPostButtonClick);
                 button.addEventListener('click', handleAddPostButtonClick);
            });
        }

        function handlePlatformHeaderClick(event) {
            const platformId = event.currentTarget.dataset.platformId;
            togglePlatform(platformId);
        }

        function handleAddPostButtonClick(event) {
            const platform = event.currentTarget.dataset.platform;
            addPost(platform);
        }


        // Setup listeners for dynamically created posts
        function setupPostEntryListeners(postElement = document) {
            // Event delegation for post-related actions (edit, save, cancel, remove, input changes)
            postElement.querySelectorAll('.post-entry').forEach(entry => {
                // Input fields inside the post entry
                const inputs = entry.querySelectorAll('input[type="text"], input[type="number"], select');
                inputs.forEach(input => {
                    input.removeEventListener('change', handlePostInputChange); // Remove old to prevent duplicates
                    input.addEventListener('change', handlePostInputChange);
                });

                // Action buttons
                const editBtn = entry.querySelector('.edit-btn');
                if (editBtn) {
                     editBtn.removeEventListener('click', handleEditPostClick);
                     editBtn.addEventListener('click', handleEditPostClick);
                }
                const saveBtn = entry.querySelector('.save-btn');
                 if (saveBtn) {
                     saveBtn.removeEventListener('click', handleSavePostClick);
                     saveBtn.addEventListener('click', handleSavePostClick);
                 }
                const cancelBtn = entry.querySelector('.cancel-btn');
                 if (cancelBtn) {
                     cancelBtn.removeEventListener('click', handleCancelEditClick);
                     cancelBtn.addEventListener('click', handleCancelEditClick);
                 }
                const removeBtn = entry.querySelector('.remove-btn');
                 if (removeBtn) {
                     removeBtn.removeEventListener('click', handleRemovePostClick);
                     removeBtn.addEventListener('click', handleRemovePostClick);
                 }
            });

            // For the add-post-button specifically inside platform-posts container generated after loadUserData
            postElement.querySelectorAll('.add-post-btn').forEach(button => {
                button.removeEventListener('click', handleAddPostButtonClick);
                button.addEventListener('click', handleAddPostButtonClick);
            });
        }

        // Event handlers for post actions
        function handlePostInputChange(event) {
             const postEntry = event.target.closest('.post-entry');
             if (postEntry) {
                 const viewsInput = postEntry.querySelector('.post-views');
                 const followersInput = postEntry.querySelector('.post-new-followers');

                 // Re-calculate engagement if relevant input changes
                 if (event.target.classList.contains('post-views') ||
                     event.target.classList.contains('post-likes') ||
                     event.target.classList.contains('post-comments') ||
                     event.target.classList.contains('post-saves') ||
                     event.target.classList.contains('post-shares')) {
                     if (viewsInput) calculateEngagement(viewsInput);
                 }
                 // Update follower display if new followers input changes
                 if (event.target.classList.contains('post-new-followers')) {
                     if (followersInput) updateFollowersDisplay(followersInput);
                 }
             }
        }

        function handleEditPostClick(event) {
            const postId = event.target.dataset.postId;
            editPost(postId);
        }

        function handleSavePostClick(event) {
            const postId = event.target.dataset.postId;
            savePost(postId);
        }

        function handleCancelEditClick(event) {
            const postId = event.target.dataset.postId;
            cancelEdit(postId);
        }

        function handleRemovePostClick(event) {
             const postId = event.target.dataset.postId;
             // Confirmation moved inside removePost for consistency
             if (confirm('Are you sure you want to remove this post?')) {
                 removePost(postId);
             }
        }

        // Event listeners for account management modal buttons
        function setupManageAccountModalListeners(container) {
            container.querySelectorAll('.edit-account-btn').forEach(button => {
                button.removeEventListener('click', handleEditAccountClick);
                button.addEventListener('click', handleEditAccountClick);
            });
             container.querySelectorAll('.delete-account-btn').forEach(button => {
                button.removeEventListener('click', handleDeleteAccountClick);
                button.addEventListener('click', handleDeleteAccountClick);
             });
        }

        function handleEditAccountClick(event) {
            const accountId = event.target.dataset.accountId;
            editAccount(accountId);
        }

        function handleDeleteAccountClick(event) {
            const accountId = event.target.dataset.accountId;
            deleteAccount(accountId);
        }


        // Initialize app on window load
        window.addEventListener('load', function() {
            console.log('Window loaded, initializing...');

            setThisWeek(); // Set default to this week date range
            initializePlatforms(); // Create initial platform sections dynamically
            setupEventListeners(); // Attach all static event listeners

            if (!initializationError) {
                try {
                    onAuthStateChanged(auth, (user) => {
                        console.log('Auth state changed:', user ? user.email : 'no user');
                        if (user) {
                            currentUser = user;
                            showUserSection();
                            loadUserData(); // Load data once user is authenticated
                        } else {
                            currentUser = null;
                            showAuthSection();
                        }
                    });
                } catch (error) {
                    console.error('Auth state listener error:', error);
                    showError('Authentication setup failed: ' + error.message);
                }
            }
        });
    </script>
</body>
</html>
